@model List<GetCarListWithBrandsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili ekleme, silme, güncelleme, arama ve listeleme işlemleri bu sayfa üzerinden
                            gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil</th>
                                        <th>Günceleme</th>
                                        <th>Detaylar</th>
                                        <th>Özellik Ata</th>
                                        <th>Site Gör</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.CarId</th>
                                            <td>@item.BrandName</td>
                                            <td>@item.Model</td>
                                            <td>@item.Transmission</td>
                                            <td>@item.Km</td>
                                            <td>
                                                <a href="/AdminCar/RemoveCar/@item.CarId" class="btn btn-outline-danger">
                                                    Sil
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success">
                                                    Güncelle
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminCarFeaturesDetail/Index/@item.CarId"
                                                    class="btn btn-outline-dark">
                                                    Detay
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Admin/AdminCarFeaturesDetail/CreateFeatureByCarId/Index/@item.CarId"
                                                    class="btn btn-outline-info">
                                                    Özellik Ata
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/CarList/CarDetail/@item.CarId" class="btn btn-outline-warning">
                                                    Siteye Git
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/CarList/CarDetail/@item.CarId" class="btn btn-outline-secondary">
                                                    Fiyat Bilgileri
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td>
                                <a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">
                                    Yeni Araç Girişi
                                </a>
                            </td>
                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>

</div>
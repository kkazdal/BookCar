@model List<GetBlogsWithAuthorDto>

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">Bazı blogların özet bilgisi</p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <tr>
                        <th>Yazar</th>
                        <th>Blog Başlığı</th>
                        <th>Blogu Aç</th>
                    </tr>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.AuthorName</h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.BlogTitle</h5>
                                     <span class="text-muted font-size-12">@item.CreatedDate.ToString("dd.MM.yyyy")</span>
                                </td>
                                <td>
                                    <a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-outline-info">Blog Detayı</a>
                                </td>
                            </tr>
                        }

                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>